<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-4">Learn more about pet sitter <%= @user.first_name %></h1>

        <p>
                <strong>Name:</strong>
                <%= @user.first_name %>
                <%= @user.last_name %>
            </p>

            <p>
                <strong>About me...</strong>
                <%= @user.about %>
            </p>

            <p>
                <strong>Address:</strong>
                <%= @user.address %>
                <%= @user.post_code %>
            </p>

            <p>
                <strong>Services:</strong>
                <% @user.pet_sitter_services.each do |pet_sitter_service| %>
                    <% if pet_sitter_service.active %>
                        <p>
                            <%= pet_sitter_service.service.name %> | <%= pet_sitter_service.service.description %> | <% pet_sitter_service.price %>
                        </p>
                    <% end %>
                <% end %>
            </p>

            <p>
                <strong>Reviews:</strong>
                <% @user.reviews.each do |review| %>
                    <p>
                        <%= review.review %>
                    </p>
                <% end %>
            </p>


</div>

    <%= link_to 'Homepage', root_path, class:" btn btn-outline-dark btn-sm" %> |
    <%= link_to 'Back', pet_sitters_path, class:" btn btn-outline-success btn-sm" %> |
