<ul>
    <% @pet.errors.full_messages do |message| %>
        <li style='color: maroon'><%= message %></li>
    <% end %>
</ul>

<%= simple_form_for @pet do |f| %>
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :observations %>
    <%= f.collection_radio_buttons :pet_types_id, PetType.all, :id, :pet_type_name %>
    <%= f.label "Pet photo" %>
    <%= f.file_field :image, accept: 'image/png, image/jpg, image/jpeg, image/gif', multiple: false %>
    <%= f.button :submit, class:"card-link btn btn-success btn-sm"  %>
<% end %>
