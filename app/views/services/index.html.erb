<h1>SERVICES</h1>

<% @services.each do |service| %>
    <div class="card border-secondary mb-3" style="max-width: 18rem;">
    <div class="card-header bg-transparent border-secondary"><%= service.name %></div>
    <div class="card-body text-secondary">
        <h5 class="card-text"><%= service.description %></h5>
        <p class="card-title"><%= service.pet_sitter_id %></p>
    </div>
    <div class="card-footer bg-transparent border-secondary"><%= service.price %></div>
    </div>
<% end %>
