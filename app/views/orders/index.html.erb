<h1>ORDERS</h1>
<div class="table-responsive">
  <div class="table-wrapper">
    <div class="table-title">
      <div class="row">
        <div class="col-sm-8">
          <%= link_to new_order_path, class: 'btn btn-info' do %>
          <i class="fa fa-plus"> New Order</i>
          <% end %>
        </div>
      </div>
    </div>
    <br>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Order</th>
          <% if current_user.client? %>
          <th>Pet Sitter</th>
          <% elsif current_user.pet_sitter? %>
          <th>Client</th>
          <% else %>
          <th>Client / Pet Sitter</th>
          <% end %>
          <th>Date</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.id %></td>
          <% if current_user.client? %>
          <td><%= order.pet_sitter.name %></td>
          <% elsif current_user.pet_sitter? %>
          <td><%= order.client.name %></td>
          <% else %>
          <td><%= order.client.name %></td> / <td><%= order.pet_sitter.name %></td>
          <% end %>

          <td><%= order.date %></td>
          <td>
            <% if order.status %>
            <span class="badge bg-success">COMPLETED</span>
            <% else %>
            <span class="badge bg-warning">IN PROGRESS</span>
            <% end %>
          </td>
          <td>
            <%= link_to order_path(order.id) do %>
            <i class="fas fa-eye">î€»</i></a>
            <% end %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
